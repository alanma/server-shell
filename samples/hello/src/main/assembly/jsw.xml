<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>jsw</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/jsw/demo/bin</directory>
			<outputDirectory>hello/bin</outputDirectory>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/config</directory>
			<outputDirectory>hello/etc</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>hello/bin</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0754</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>target/jsw</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>hello/bin/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<!-- http://stackoverflow.com/questions/2605747/maven-how-to-include-empty-directories -->
			<directory>src/main/assembly</directory>
			<outputDirectory>hello/logs</outputDirectory>
			<directoryMode>0755</directoryMode>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
